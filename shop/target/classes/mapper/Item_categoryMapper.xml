<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.Item_categoryMapper">

    <select id="selectById" parameterType="Integer" resultType="com.shop.entity.Item_category">
        select * from item_category where id = #{id}

    </select>

    <select id="selectAll" resultType="com.shop.entity.Item_category">
        select * from item_category

    </select>

   <!-- 查询二级分类-->
    <select id="selectBy_pid" parameterType="Integer" resultType="com.shop.entity.Item_category">
        select * from item_category where isdelete =0 and pid=#{pid}

    </select>

</mapper>