<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.GoodsMapper">

    <select id="getAll" resultType="com.shop.entity.Goods">
        select * from goods
    </select>

    <select id="getById" parameterType="Integer" resultType="com.shop.entity.Goods">
        select * from goods where id = #{id}


    </select>


    <!--  查询符合条件的集合,不分页查询，懒,根据商品名字的分页查询-->
    <select id="fuzzyQuery"  parameterType="String" resultType="com.shop.entity.Goods">
        select * from goods  where name like '%${name}%'
    </select>




</mapper>